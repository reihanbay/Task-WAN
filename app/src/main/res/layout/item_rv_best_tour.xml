<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/container_rounded"
    android:padding="10dp"
    android:elevation="5dp"
    android:backgroundTint="@color/white"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_tour"
        android:scaleType="centerCrop"
        android:background="@drawable/container_rounded"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tour_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_pin"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:tint="@android:color/holo_red_dark" />
            <TextView
                android:id="@+id/tv_tour_place"
                android:layout_marginHorizontal="10dp"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/grey_1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_tour_price"
            android:text="@string/lorem_ipsum"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_star"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:tint="@color/yellow_1" />
            <TextView
                android:id="@+id/tv_tour_range"
                android:layout_marginHorizontal="5dp"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/grey_1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_category"
                android:src="@drawable/ic_hotel"
                android:layout_width="18dp"
                android:layout_height="18dp"
                 />
            <TextView
                android:id="@+id/tv_tour_category"
                android:layout_marginHorizontal="5dp"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/grey_1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>